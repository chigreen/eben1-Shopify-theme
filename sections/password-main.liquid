<!-- Password / Coming Soon Page - EBEN1 Speed -->

<!-- Starfield layers -->
<div class="starfield">
  <div class="stars-distant"></div>
  <div class="stars-medium"></div>
  <div class="stars-bright"></div>
  <div class="stars-twinkle"></div>
  <div class="stars-twinkle-delayed"></div>
</div>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <img src="{{ 'eben1-logo.png' | asset_url }}" alt="" class="hero-logo" style="height: 200px; width: auto; margin: 0 auto var(--space-md); display: block;">
    <h1 class="logo">EBEN1 <span>Speed</span></h1>
    <p class="tagline">Single Speed Outfitters</p>

    <p class="status">Launching Now â€” 2026</p>

    <p class="intro">
      {{ section.settings.description | default: 'A specialty single speed outfitter, offering curated and custom builds, as well as parts, wheels, and accessories. We think all bikes are good bikes, but we especially enjoy the simplicity and rhythm of riding single speed.' }}
    </p>

    {% form 'customer', id: 'password-signup' %}
      <div class="signup-form">
        <input type="email" name="contact[email]" placeholder="Enter your email" required>
        <button type="submit">Notify Me</button>
      </div>
    {% endform %}
    <p class="signup-note">Be first to know when we launch.</p>
  </div>

</section>

<!-- Password Entry (for store owner access) -->
<div class="password-login">
  <button class="password-toggle" onclick="this.nextElementSibling.classList.toggle('visible')">
    Enter with password
  </button>
  <div class="password-form-wrapper">
    {% form 'storefront_password' %}
      <div class="password-entry-form">
        <input type="password" name="password" placeholder="Password">
        <button type="submit">Enter</button>
      </div>
      {% if form.errors %}
        <p class="password-error">{{ form.errors.messages.password }}</p>
      {% endif %}
    {% endform %}
  </div>
</div>

<style>
  /* ========== STARFIELD ========== */
  .starfield {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
    opacity: 0.5;
  }

  /* Distant tiny stars - faint background layer */
  .stars-distant {
    position: absolute;
    width: 1px;
    height: 1px;
    background: transparent;
    box-shadow:
      50vw 10vh rgba(255,255,255,0.3),
      15vw 25vh rgba(255,255,255,0.2),
      80vw 15vh rgba(255,255,255,0.25),
      25vw 45vh rgba(255,255,255,0.2),
      60vw 35vh rgba(255,255,255,0.3),
      90vw 55vh rgba(255,255,255,0.2),
      10vw 65vh rgba(255,255,255,0.25),
      45vw 75vh rgba(255,255,255,0.2),
      75vw 85vh rgba(255,255,255,0.3),
      35vw 95vh rgba(255,255,255,0.2),
      5vw 40vh rgba(255,255,255,0.25),
      95vw 30vh rgba(255,255,255,0.2);
    animation: drift-slow 60s linear infinite alternate;
  }

  /* Medium stars with subtle glow */
  .stars-medium {
    position: absolute;
    width: 2px;
    height: 2px;
    background: transparent;
    border-radius: 50%;
    box-shadow:
      20vw 20vh 1px rgba(255,255,255,0.5),
      70vw 30vh 1px rgba(255,255,255,0.4),
      40vw 60vh 1px rgba(255,255,255,0.5),
      85vw 70vh 1px rgba(255,255,255,0.4),
      15vw 80vh 1px rgba(255,255,255,0.5),
      55vw 45vh 1px rgba(255,255,255,0.4),
      30vw 15vh 1px rgba(143,168,154,0.5),
      65vw 90vh 1px rgba(143,168,154,0.4);
    animation: drift-medium 40s linear infinite alternate;
  }

  /* Bright stars with glow halo */
  .stars-bright {
    position: absolute;
    width: 3px;
    height: 3px;
    background: transparent;
    border-radius: 50%;
    box-shadow:
      25vw 35vh 2px 1px rgba(255,255,255,0.7),
      75vw 50vh 2px 1px rgba(255,255,255,0.65),
      50vw 80vh 2px 1px rgba(255,255,255,0.7),
      10vw 55vh 2px 1px rgba(143,168,154,0.7),
      88vw 25vh 2px 1px rgba(143,168,154,0.65);
    animation: drift-fast 25s linear infinite alternate;
  }

  /* Twinkling stars */
  .stars-twinkle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: transparent;
    border-radius: 50%;
    box-shadow:
      35vw 25vh 3px 1px rgba(255,255,255,0.8),
      65vw 65vh 3px 1px rgba(255,255,255,0.75),
      80vw 40vh 2px 1px rgba(143,168,154,0.8);
    animation: twinkle 3s ease-in-out infinite;
  }

  .stars-twinkle-delayed {
    position: absolute;
    width: 2px;
    height: 2px;
    background: transparent;
    border-radius: 50%;
    box-shadow:
      45vw 50vh 2px 1px rgba(255,255,255,0.7),
      20vw 70vh 2px 1px rgba(255,255,255,0.65);
    animation: twinkle 4s ease-in-out infinite 1.5s;
  }

  @keyframes drift-slow {
    0% { transform: translateY(0) translateX(0); }
    100% { transform: translateY(-80px) translateX(40px); }
  }

  @keyframes drift-medium {
    0% { transform: translateY(0) translateX(0); }
    100% { transform: translateY(-60px) translateX(-50px); }
  }

  @keyframes drift-fast {
    0% { transform: translateY(0) translateX(0); }
    100% { transform: translateY(-40px) translateX(30px); }
  }

  @keyframes twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.15; }
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 6rem;
    position: relative;
    text-align: center;
  }

  /* Hero background image - Zeta Reticuli star map */
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('{{ "zeta-reticuli.jpg" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.12;
    filter: invert(1);
    z-index: 0;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      linear-gradient(to bottom, transparent 0%, transparent 70%, var(--color-bg) 100%);
    pointer-events: none;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 5;
    max-width: 700px;
  }

  .logo {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 10vw, 4.5rem);
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .logo span {
    color: var(--color-primary);
  }

  .tagline {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }

  .status {
    font-family: var(--font-display);
    font-size: clamp(1rem, 3vw, 1.25rem);
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .intro {
    font-size: 1.125rem;
    color: var(--color-text);
    max-width: 550px;
    margin: 0 auto 3rem;
    line-height: 1.9;
  }

  /* Email signup */
  .signup-form {
    display: flex;
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-primary);
    border-radius: 2px;
    overflow: hidden;
    max-width: 420px;
    margin: 0 auto 1rem;
    box-shadow: 0 0 30px rgba(143, 168, 154, 0.35);
  }

  .signup-form input {
    flex: 1;
    padding: 1rem 1.25rem;
    background: rgba(26, 36, 32, 0.95);
    border: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 0.875rem;
    outline: none;
  }

  .signup-form input::placeholder {
    color: var(--color-text-muted);
  }

  .signup-form button {
    padding: 1rem 1.5rem;
    background: var(--color-primary);
    color: var(--color-bg);
    border: none;
    font-family: var(--font-display);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .signup-form button:hover {
    background: var(--color-primary-dim);
    box-shadow: 0 0 30px var(--color-glow);
  }

  .signup-note {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-dim);
    letter-spacing: 0.1em;
  }

  /* Password login */
  .password-login {
    position: fixed;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    text-align: center;
  }

  .password-toggle {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    color: var(--color-text-dim);
    background: none;
    border: none;
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .password-toggle:hover {
    color: var(--color-text-muted);
  }

  .password-form-wrapper {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .password-form-wrapper.visible {
    max-height: 100px;
    margin-top: 0.75rem;
  }

  .password-entry-form {
    display: flex;
    gap: 1px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
  }

  .password-entry-form input {
    padding: 0.5rem 0.75rem;
    background: rgba(26, 36, 32, 0.95);
    border: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 0.75rem;
    width: 140px;
  }

  .password-entry-form button {
    padding: 0.5rem 0.75rem;
    background: var(--color-text-dim);
    color: var(--color-bg);
    border: none;
    font-family: var(--font-mono);
    font-size: 0.5625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
  }

  .password-error {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: #ff6b6b;
    margin-top: 0.5rem;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .signup-form {
      flex-direction: column;
    }

    .signup-form button {
      padding: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Coming Soon",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Intro Description",
      "default": "A specialty single speed outfitter, offering curated and custom builds, as well as parts, wheels, and accessories. We think all bikes are good bikes, but we especially enjoy the simplicity and rhythm of riding single speed."
    },
  ]
}
{% endschema %}
