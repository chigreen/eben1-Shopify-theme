<!-- Password / Coming Soon Page - EBEN1 Speed -->
<div class="password-page">
  <div class="password-container">

    <!-- Logo -->
    <h1 class="password-logo">EBEN1 <span>Speed</span></h1>
    <p class="password-tagline">Single Speed MTB</p>

    <!-- Main message -->
    <p class="password-headline">{{ section.settings.headline | default: 'Arriving Soon' }}</p>
    <p class="password-description">
      {{ section.settings.description | default: 'High-end single speed mountain bikes. All carbon frames. Curated components. Built for riders who understand that less is more.' }}
    </p>

    <!-- Email signup -->
    {% form 'customer', id: 'password-signup' %}
      <div class="password-signup-form">
        <input type="email" name="contact[email]" placeholder="Enter your email" required>
        <button type="submit">Notify Me</button>
      </div>
    {% endform %}
    <p class="password-signup-note">Be first to know when we launch.</p>

    <div class="password-divider"></div>

    <!-- Feature teaser -->
    <div class="password-features">
      <div class="password-feature">
        <p class="feature-label">Frame</p>
        <p class="feature-value">Full Carbon</p>
      </div>
      <div class="password-feature">
        <p class="feature-label">Drivetrain</p>
        <p class="feature-value">Single Speed</p>
      </div>
      <div class="password-feature">
        <p class="feature-label">Philosophy</p>
        <p class="feature-value">Zero Compromise</p>
      </div>
    </div>

    <!-- Optional: Password entry for store owner access -->
    {% if section.settings.show_password_form %}
      <div class="password-access">
        <button class="password-toggle" onclick="this.nextElementSibling.classList.toggle('visible')">
          Enter with password
        </button>
        <div class="password-form-wrapper">
          {% form 'storefront_password' %}
            <div class="password-entry-form">
              <input type="password" name="password" placeholder="Password">
              <button type="submit">Enter</button>
            </div>
            {% if form.errors %}
              <p class="password-error">{{ form.errors.messages.password }}</p>
            {% endif %}
          {% endform %}
        </div>
      </div>
    {% endif %}

  </div>

  <!-- Footer -->
  <footer class="password-footer">
    <div class="password-social">
      {% if section.settings.instagram_url %}
        <a href="{{ section.settings.instagram_url }}">IG</a>
      {% endif %}
      {% if section.settings.youtube_url %}
        <a href="{{ section.settings.youtube_url }}">YT</a>
      {% endif %}
      {% if section.settings.strava_url %}
        <a href="{{ section.settings.strava_url }}">STR</a>
      {% endif %}
    </div>
  </footer>
</div>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  /* Star field background */
  .password-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    background-image:
      radial-gradient(1px 1px at 10% 20%, rgba(255,255,255,0.15) 0%, transparent 100%),
      radial-gradient(1px 1px at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 100%),
      radial-gradient(1px 1px at 30% 80%, rgba(255,255,255,0.08) 0%, transparent 100%),
      radial-gradient(1px 1px at 40% 30%, rgba(255,255,255,0.12) 0%, transparent 100%),
      radial-gradient(1px 1px at 50% 70%, rgba(255,255,255,0.05) 0%, transparent 100%),
      radial-gradient(1px 1px at 60% 10%, rgba(255,255,255,0.1) 0%, transparent 100%),
      radial-gradient(1px 1px at 70% 60%, rgba(255,255,255,0.08) 0%, transparent 100%),
      radial-gradient(1px 1px at 80% 40%, rgba(255,255,255,0.06) 0%, transparent 100%),
      radial-gradient(1px 1px at 90% 90%, rgba(255,255,255,0.12) 0%, transparent 100%),
      radial-gradient(1.5px 1.5px at 15% 65%, rgba(212,175,55,0.2) 0%, transparent 100%),
      radial-gradient(1.5px 1.5px at 85% 15%, rgba(212,175,55,0.15) 0%, transparent 100%);
  }

  /* Subtle radial glow */
  .password-page::after {
    content: '';
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(212,175,55,0.03) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .password-container {
    position: relative;
    z-index: 1;
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  .password-logo {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 3.5rem);
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .password-logo span {
    color: var(--color-primary);
  }

  .password-tagline {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 4rem;
  }

  .password-headline {
    font-family: var(--font-display);
    font-size: clamp(1rem, 3vw, 1.25rem);
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .password-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    max-width: 400px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }

  .password-signup-form {
    display: flex;
    gap: 1px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
    max-width: 400px;
    margin: 0 auto 1rem;
  }

  .password-signup-form input {
    flex: 1;
    padding: 1rem 1.25rem;
    background: rgba(10, 10, 10, 0.8);
    border: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 0.875rem;
  }

  .password-signup-form input::placeholder {
    color: var(--color-text-dim);
  }

  .password-signup-form button {
    padding: 1rem 1.5rem;
    background: var(--color-primary);
    color: var(--color-bg);
    border: none;
    font-family: var(--font-display);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .password-signup-form button:hover {
    background: var(--color-primary-dim);
    box-shadow: 0 0 30px var(--color-glow);
  }

  .password-signup-note {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-dim);
    letter-spacing: 0.1em;
  }

  .password-divider {
    width: 100px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
    margin: 3rem auto;
  }

  .password-features {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .password-feature {
    text-align: center;
  }

  .feature-label {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-dim);
    margin-bottom: 0.25rem;
  }

  .feature-value {
    font-family: var(--font-display);
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    color: var(--color-text);
  }

  /* Password access section */
  .password-access {
    margin-top: 3rem;
  }

  .password-toggle {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    color: var(--color-text-dim);
    background: none;
    border: none;
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .password-toggle:hover {
    color: var(--color-text-muted);
  }

  .password-form-wrapper {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .password-form-wrapper.visible {
    max-height: 100px;
    margin-top: 1rem;
  }

  .password-entry-form {
    display: flex;
    gap: 1px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
    max-width: 300px;
    margin: 0 auto;
  }

  .password-entry-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: rgba(10, 10, 10, 0.8);
    border: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 0.875rem;
  }

  .password-entry-form button {
    padding: 0.75rem 1rem;
    background: var(--color-text-dim);
    color: var(--color-bg);
    border: none;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
  }

  .password-error {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #ff6b6b;
    margin-top: 0.5rem;
  }

  /* Footer */
  .password-footer {
    position: fixed;
    bottom: 2rem;
    left: 0;
    right: 0;
    text-align: center;
    z-index: 1;
  }

  .password-social {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .password-social a {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.15em;
    color: var(--color-text-dim);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .password-social a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 480px) {
    .password-signup-form {
      flex-direction: column;
    }

    .password-features {
      gap: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Coming Soon",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Arriving Soon"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "High-end single speed mountain bikes. All carbon frames. Curated components. Built for riders who understand that less is more."
    },
    {
      "type": "checkbox",
      "id": "show_password_form",
      "label": "Show password entry for store access",
      "default": true
    },
    {
      "type": "header",
      "content": "Social Links"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "strava_url",
      "label": "Strava URL"
    }
  ]
}
{% endschema %}
