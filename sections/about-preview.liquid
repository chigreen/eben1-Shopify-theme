<!-- About Preview Section - EBEN1 Speed -->
<section class="about-preview">
  <div class="section-container">
    <div class="about-grid">
      <div class="about-content">
        <h2>{{ section.settings.title | default: 'The Blueprint' }}</h2>
        <p>{{ section.settings.description | default: 'Single speed is not a limitation. It is an engineering decision. One gear ratio, precision-machined. No derailleurs. No excess. Every EBEN1 Speed frame is forged from full carbon and assembled with industrial-grade intentâ€”each component selected for function, not filler.' }}</p>
        <a href="{{ section.settings.link | default: '/pages/about' }}" class="btn btn-secondary">
          {{ section.settings.link_text | default: 'Learn More' }}
        </a>
      </div>
      {% if section.settings.image %}
        <div class="about-image">
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Preview",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Blueprint"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Single speed is not a limitation. It is an engineering decision. One gear ratio, precision-machined. No derailleurs. No excess. Every frame forged from full carbon with industrial-grade intent."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Preview"
    }
  ]
}
{% endschema %}
