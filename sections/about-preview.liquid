<!-- About Preview Section - EBEN1 Speed -->
<section class="about-preview">
  <div class="section-container">
    <div class="about-grid">
      <div class="about-content">
        <h2>{{ section.settings.title | default: 'The Concept' }}</h2>
        <p>{{ section.settings.description | default: 'Art is what you can get away with. We got away with one gear. No derailleurs, no complexity, no apologies. In the future, everyone will ride single speed for 15 minutes. We built the bike for those who never stop. Every EBEN1 Speed is a statement piece â€” carbon, deliberate, repeated until it becomes iconic.' }}</p>
        <a href="{{ section.settings.link | default: '/pages/about' }}" class="btn btn-secondary">
          {{ section.settings.link_text | default: 'See the Process' }}
        </a>
      </div>
      {% if section.settings.image %}
        <div class="about-image">
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Preview",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Concept"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Art is what you can get away with. We got away with one gear. No derailleurs, no complexity, no apologies. In the future, everyone will ride single speed for 15 minutes. We built the bike for those who never stop."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "See the Process"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Preview"
    }
  ]
}
{% endschema %}
