<!-- About Preview Section - EBEN1 Speed -->
<section class="about-preview">
  <div class="section-container">
    <div class="about-grid">
      <div class="about-content">
        <h2>{{ section.settings.title | default: 'The Factory' }}</h2>
        <p>{{ section.settings.description | default: 'Being good in business is the most fascinating kind of art. We made one bike. One gear. Then we made it again. And again. Repetition makes reputation. A single speed is pop art — ordinary made extraordinary. No derailleurs. No complexity. No apologies. Just the same perfect thing, over and over, until everybody wants one.' }}</p>
        <a href="{{ section.settings.link | default: '/pages/about' }}" class="btn btn-secondary">
          {{ section.settings.link_text | default: 'Enter the Factory' }}
        </a>
      </div>
      {% if section.settings.image %}
        <div class="about-image">
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Preview",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Factory"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Being good in business is the most fascinating kind of art. We made one bike. One gear. Then we made it again. And again. Repetition makes reputation. A single speed is pop art — ordinary made extraordinary."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Enter the Factory"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Preview"
    }
  ]
}
{% endschema %}
