<!-- Footer Section - EBEN1 Speed -->
<footer class="site-footer">
  <div class="footer-container">

    <!-- Footer Main -->
    <div class="footer-main">

      <!-- Brand Column -->
      <div class="footer-brand">
        <h3 class="footer-logo">EBEN1 Speed</h3>
        <p class="footer-tagline">{{ settings.store_tagline }}</p>
      </div>

      <!-- Quick Links -->
      <div class="footer-links">
        <h4>Builds</h4>
        <ul>
          {% for link in linklists.footer.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Support -->
      <div class="footer-links">
        <h4>Support</h4>
        <ul>
          <li><a href="/pages/contact">Contact</a></li>
          <li><a href="/pages/sizing">Sizing Guide</a></li>
          <li><a href="/pages/shipping">Shipping</a></li>
          <li><a href="/pages/warranty">Warranty</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-newsletter">
        <h4>Transmissions</h4>
        <p>Updates on new builds and restocks.</p>
        {% form 'customer', id: 'footer-newsletter' %}
          <div class="newsletter-form">
            <input type="email" name="contact[email]" placeholder="Email" required>
            <button type="submit">Join</button>
          </div>
        {% endform %}
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} EBEN1 Speed</p>
      <div class="footer-social">
        {% if section.settings.social_instagram %}
          <a href="{{ section.settings.social_instagram }}" aria-label="Instagram">IG</a>
        {% endif %}
        {% if section.settings.social_youtube %}
          <a href="{{ section.settings.social_youtube }}" aria-label="YouTube">YT</a>
        {% endif %}
        {% if section.settings.social_strava %}
          <a href="{{ section.settings.social_strava }}" aria-label="Strava">STR</a>
        {% endif %}
      </div>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "social_strava",
      "label": "Strava URL"
    }
  ]
}
{% endschema %}
