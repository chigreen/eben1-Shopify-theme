<!-- Rider Resources Section -->
<section class="rider-resources">
  <div class="section-container">
    <span class="section-label">Resources</span>
    <h2 class="section-title">{{ section.settings.title | default: 'Rider Resources' }}</h2>

    <div class="resources-grid">
      {% for block in section.blocks %}
        <div class="resource-card">
          <div class="resource-header">
            {% if block.type == 'guide' %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
              </svg>
            {% elsif block.type == 'video' %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
            {% elsif block.type == 'tool' %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
              </svg>
            {% else %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="16" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12.01" y2="8"/>
              </svg>
            {% endif %}
            <span class="resource-type">{{ block.type | capitalize }}</span>
          </div>

          <h3 class="resource-title">{{ block.settings.title }}</h3>
          <p class="resource-description">{{ block.settings.description }}</p>

          {% if block.settings.link %}
            <a href="{{ block.settings.link }}" class="resource-link" {% if block.settings.external %}target="_blank"{% endif %}>
              {{ block.settings.link_text | default: 'Learn More' }} →
            </a>
          {% endif %}
        </div>
      {% else %}
        <!-- Default resources -->
        <div class="resource-card">
          <div class="resource-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
            <span class="resource-type">Guide</span>
          </div>
          <h3 class="resource-title">Gear Ratio Calculator</h3>
          <p class="resource-description">Find your perfect ratio based on terrain and fitness</p>
          <a href="/pages/gear-ratio" class="resource-link">Calculate →</a>
        </div>

        <div class="resource-card">
          <div class="resource-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
            <span class="resource-type">Guide</span>
          </div>
          <h3 class="resource-title">Sizing Guide</h3>
          <p class="resource-description">Find your frame size based on height and riding style</p>
          <a href="/pages/sizing" class="resource-link">View Guide →</a>
        </div>

        <div class="resource-card">
          <div class="resource-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
              </svg>
            <span class="resource-type">Tool</span>
          </div>
          <h3 class="resource-title">SS Maintenance</h3>
          <p class="resource-description">Chain tension, cog wear, and keeping it simple</p>
          <a href="/pages/maintenance" class="resource-link">Read More →</a>
        </div>

        <div class="resource-card">
          <div class="resource-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
            <span class="resource-type">Info</span>
          </div>
          <h3 class="resource-title">SS FAQ</h3>
          <p class="resource-description">Common questions about single speed riding</p>
          <a href="/pages/faq" class="resource-link">View FAQ →</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .rider-resources {
    padding: var(--space-xl) 0;
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
  }

  .rider-resources .section-label {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-primary);
    display: block;
    text-align: center;
    margin-bottom: var(--space-sm);
  }

  .rider-resources .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-md);
  }

  .resource-card {
    padding: var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    transition: all var(--transition);
  }

  .resource-card:hover {
    border-color: var(--color-text-dim);
  }

  .resource-header {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-sm);
    color: var(--color-text-dim);
  }

  .resource-type {
    font-family: var(--font-mono);
    font-size: 0.5625rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text-dim);
  }

  .resource-title {
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }

  .resource-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-sm);
  }

  .resource-link {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition);
  }

  .resource-link:hover {
    color: var(--color-primary-dim);
  }
</style>

