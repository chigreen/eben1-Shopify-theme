<!-- Page Banner Section -->
<section class="page-banner">
  <div class="section-container">
    <span class="page-label">{{ section.settings.label }}</span>
    <h1 class="page-banner-title">{{ section.settings.title | default: page.title }}</h1>
    {% if section.settings.subtitle %}
      <p class="page-banner-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
</section>

<style>
  .page-banner {
    padding: calc(80px + var(--space-xl)) var(--space-md) var(--space-lg);
    text-align: center;
    position: relative;
  }

  .page-banner::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
  }

  .page-label {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-primary);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .page-banner-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--space-sm);
  }

  .page-banner-subtitle {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
    max-width: 500px;
    margin: 0 auto;
  }
</style>

{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label (above title)",
      "default": "EBEN1 Speed"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ]
}
{% endschema %}
