<!-- Hero Section - EBEN1 Speed -->
<section class="hero-section color-block-pink">
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title | default: 'ONE GEAR. EVERYBODY WANTS ONE.' }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle | default: 'A single speed is a mass-produced object that everybody rides. We just made it art.' }}</p>
    <div class="hero-actions">
      <a href="{{ section.settings.cta_link | default: '/collections/all' }}" class="btn btn-primary">
        {{ section.settings.cta_text | default: 'Buy the Art' }}
      </a>
      <a href="{{ section.settings.secondary_link | default: '/pages/about' }}" class="btn btn-secondary">
        {{ section.settings.secondary_text | default: 'The Factory' }}
      </a>
    </div>
  </div>
  {% if section.settings.background_image %}
    <div class="hero-background">
      <img src="{{ section.settings.background_image | image_url: width: 1920 }}" alt="" loading="eager">
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "ONE GEAR. EVERYBODY WANTS ONE."
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "A single speed is a mass-produced object that everybody rides. We just made it art."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary button text",
      "default": "Buy the Art"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_text",
      "label": "Secondary button text",
      "default": "The Factory"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
